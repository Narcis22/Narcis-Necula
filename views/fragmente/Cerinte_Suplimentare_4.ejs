
<script>
	function myMove() {
	  var elem = document.getElementById("myAnimation");   
	  var pos = 30;
	  var dir = 1;
	  var id = setInterval(frame, 10);
	  function frame() {
		if (pos == 225 && dir == 1){
				dir = 2;
				pos = 390;
		} else if(pos == 3600 && dir == 2){
			pos = 225;
			dir = 3;
		} else if(pos == 30 && dir == 3){
			dir = 0;
			pos = 3600;
		}else
		if(pos == 390 && dir == 0){
			dir = 1;
			pos = 30;
		}
		else{
		  if(dir == 1){
				 pos++;
				elem.style.left = pos+'px';
		  } else if(dir == 2){
				 pos++;
			elem.style.top = pos+'px';
		  } else if(dir == 3){
			pos--;
			elem.style.left = pos+'px';
		  } else if(dir == 0){
			pos--;
			elem.style.top = pos+'px';
		  } 
	   }
	  }
	  }
	  myMove();
	</script>