    if(inputVal.value == "DarkGreen" || inputVal.value == "darkGreen" || inputVal.value == "Darkgreen" || inputVal.value == "darkgreen"|| inputVal.value == "#004a05"){
        left_col.style.backgroundColor = "#004a05";
    }
    else
    if(inputVal.value == "Green" || inputVal.value == "green"|| inputVal.value == "#11f020"){
        left_col.style.backgroundColor = "#11f020";
    }
    else
    if(inputVal.value == "Purple" || inputVal.value == "purple"|| inputVal.value == "#d900d9"){
        left_col.style.backgroundColor = "#d900d9";
    }
    else{if(inputVal.value != ""){
        alert("Culoarea introdusa nu este valida!");
    }}
}
checkFilled();
</script>