        left_col.style.backgroundColor = "#d1b02c";
    }
    else
    if(inputVal.value == "Blue" || inputVal.value == "blue"|| inputVal.value == "#247de3"){
        left_col.style.backgroundColor = "#247de3";
    }
    
    else
    if(inputVal.value == "Yellow" || inputVal.value == "yellow"|| inputVal.value == "#ffff00"){
        left_col.style.backgroundColor = "yellow";
    }
    else
    if(inputVal.value == "Orange" || inputVal.value == "orange"|| inputVal.value == "#d94800"){
        left_col.style.backgroundColor = "#d94800";
    }
    else
    if(inputVal.value == "Pink" || inputVal.value == "pink"|| inputVal.value == "#d900d9"){
        left_col.style.backgroundColor = "#d900d9";
    }
    else
    if(inputVal.value == "Red" || inputVal.value == "red"|| inputVal.value == "#ff0000"){
        left_col.style.backgroundColor = "red";
    }
